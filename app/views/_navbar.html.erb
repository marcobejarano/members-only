<% if user_signed_in? %>
  <p>
    You are currently signed in as: <strong><%= current_user.username %></strong>
  </p>
  <%= link_to "Create Post", new_post_path %><br>
  <%= link_to "Edit User", edit_user_registration_path %><br>
  <%= link_to "Log Out", destroy_user_session_path, data: {
    turbo_method: :delete,
