<%= render "/navbar" %>

<h3>List of Posts</h3>

<ol>
  <% @posts.each do |post| %>
    <li>
      <p><strong>Title: </strong><%= post.title %></p>
      <p><strong>Body: </strong><%= post.body %></p>
      <% if user_signed_in? %>
        <p><strong>Author: </strong><%= post.user.username %></p>
      <% end %>
      <br>
    </li>
  <% end %>
</ol>