<h1>List of Users<h1>

<ol>
  <% @users.each do |user| %>
    <li><%= link_to user.username, user %></li>
  <% end %>
</ol>

<% if user_signed_in? %>
  <%= link_to "Edit User", edit_user_registration_path %><br>
  <%= link_to "Log Out", destroy_user_session_path, data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure to Log Out?" } %>
<% else %>
  <%= link_to "Log in", new_user_session_path %><br>
  <%= link_to "Sign Up", new_user_registration_path %>
<% end %>