<%= render "/flash" %>

<%= render "/navbar" %>

<p>The following is the informacion for the user <%= @user.username %>:</p>
<p><strong>Username: </strong><em><%= @user.username %></em></p>
<p><strong>Email: </strong><em><%= @user.email %></em></p>

<% if user_signed_in? %>
<h3>List of Posts</h3>
  <ol>
    <% @posts.each do |post| %>
      <li>
        <p><strong>Title: </strong><%= post.title %></p>
        <p><strong>Body: </strong><%= post.body %></p>
        <br>
      </li>
    <% end %>
  </ol>
<% end %>