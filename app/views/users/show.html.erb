<% if user_signed_in? %>
  <p>
    You are currently signed in as: <strong><%= current_user.username %></strong>
  </p>
<% end %>

<p>The following is the informacion for the user <%= @user.username %>:</p>
<p><strong>Username: </strong><em><%= @user.username %></em></p>
<p><strong>Email: </strong><em><%= @user.email %></em></p>

<% if user_signed_in? %>
  <%= link_to "Log Out", destroy_user_session_path, data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure to Log Out?" } %>
<% else %>
  <%= link_to "Log in", new_user_session_path %><br>
  <%= link_to "Sign Up", new_user_registration_path %>
<% end %>